<Window x:Class="ProdInfoSys.Windows.StatusReportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProdInfoSys.Windows"
        xmlns:ViewModels="clr-namespace:ProdInfoSys.ViewModels"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        mc:Ignorable="d"
        Title="Új Status Report létrehozása" Height="800" Width="1500" WindowStartupLocation="CenterScreen">
<!--    <Window.DataContext>
        <ViewModels:NewStatusReportViewModel/>
    </Window.DataContext> -->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <ToolBar Grid.Row="0">
            <Button Margin="0" Height="64" ToolTip="Kiszállítási terv import" Command="{Binding ImportShipoutPlan}">
                <StackPanel Orientation="Horizontal">
                    <Image Source="/img/icons8-xls-import-60.png" />
                </StackPanel>
            </Button>
            <Button Margin="0" Height="64" ToolTip="Adatok mentése" Command="{Binding SaveReportData}">
                <StackPanel Orientation="Horizontal">
                    <Image Source="/img/icons8-save-60.png" />
                </StackPanel>
            </Button>
            <Separator/>
            <TextBlock Text="Reportnév" VerticalAlignment="Center" FontSize="16"/>
            <TextBox Width="200" Margin="10 0 0 0" Text="{Binding ReportName}"/>
            <TextBlock Text="{Binding MustSave}" VerticalAlignment="Center" FontFamily="Consolas" FontWeight="Bold" Foreground="Red" FontSize="20" Margin="10 0 0 0"/>
        </ToolBar>
        
        <Border Grid.Row="1" BorderBrush="#4DA1A9" BorderThickness="1" CornerRadius="5" Padding="2" Margin="5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="730"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <ListBox Grid.Column="0" Margin="5" ItemsSource="{Binding StatusReports}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="25"/>
                                    <RowDefinition Height="25"/>
                                    <RowDefinition Height="27"/>
                                    <RowDefinition Height="250"/>
                                </Grid.RowDefinitions>

                                <!-- Sor 1 -->
                                <Grid Grid.Row="0" Margin="0 5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="150"/>
                                        <ColumnDefinition Width="200"/>
                                        <ColumnDefinition Width="200"/>
                                        <ColumnDefinition Width="130"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0" Text="Workcenter:" FontSize="15" FontFamily="Consolas" Margin="0 0 10 0"/>
                                    <TextBlock Grid.Column="1" Text="{Binding Workcenter}" FontWeight="Bold" FontSize="15" FontFamily="Consolas"/>
                                    <TextBlock Grid.Column="2" Text="Diff.:" FontSize="15" FontFamily="Consolas" Margin="20 0 10 0"/>
                                    <TextBlock Grid.Column="3" Text="{Binding Diff}" FontSize="15" FontFamily="Consolas"/>
                                </Grid>

                                <!-- Sor 2 -->
                                <Grid Grid.Row="1" Margin="0 5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="150"/>
                                        <ColumnDefinition Width="200"/>
                                        <ColumnDefinition Width="200"/>
                                        <ColumnDefinition Width="130"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0" Text="Komulált kimenet:" FontSize="15" FontFamily="Consolas" Margin="0 0 10 0"/>
                                    <TextBlock Grid.Column="1" Text="{Binding ComulatedOut}" FontSize="15" FontFamily="Consolas"/>
                                    <TextBlock Grid.Column="2" Text="Komulált terv:" FontSize="15" FontFamily="Consolas" Margin="20 0 10 0"/>
                                    <TextBlock Grid.Column="3" Text="{Binding ComulatedPlan}" FontSize="15" FontFamily="Consolas"/>
                                </Grid>

                                <!-- Sor 3 -->
                                <Grid Grid.Row="2" Margin="0 5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="150"/>
                                        <ColumnDefinition Width="200"/>
                                        <ColumnDefinition Width="200"/>
                                        <ColumnDefinition Width="130"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0" Text="KFT Selejt:" FontSize="15" FontFamily="Consolas" Margin="0 0 10 0"/>
                                    <TextBlock Grid.Column="1" Text="{Binding KftReject}" FontSize="15" FontFamily="Consolas"/>
                                    <TextBlock Grid.Column="2" Text="Beszáll. selejt:" FontSize="15" FontFamily="Consolas" Margin="20 0 10 0"/>
                                    <TextBlock Grid.Column="3" Text="{Binding SupplierReject}" FontSize="15" FontFamily="Consolas"/>
                                </Grid>

                                <!-- Sor 4: Chart -->
                                <lvc:CartesianChart Grid.Row="3" Series="{Binding ChartData}" LegendLocation="Bottom" Margin="0 10 0 0">
                                    <lvc:CartesianChart.AxisX>
                                        <lvc:Axis Title="Munkanap" />
                                    </lvc:CartesianChart.AxisX>
                                    <lvc:CartesianChart.AxisY>
                                        <lvc:Axis Title="Kimenet" />
                                    </lvc:CartesianChart.AxisY>
                                </lvc:CartesianChart>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <Grid Grid.Column="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>

                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Row="0" Grid.Column="0">
                        <DataGrid ItemsSource="{Binding PlanChanges}" AutoGenerateColumns="False" >
                            <DataGrid.ColumnHeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="FontFamily" Value="Consolas"/>
                                    <Setter Property="FontSize" Value="13"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                </Style>
                            </DataGrid.ColumnHeaderStyle>
                            <DataGrid.RowStyle>
                                <Style TargetType="DataGridRow">
                                    <Setter Property="FontFamily" Value="Consolas"/>
                                    <Setter Property="Foreground" Value="#38757a"/>
                                    <Setter Property="Background" Value="#eef6f7"/>
                                    <Setter Property="FontSize" Value="12"/>
                                </Style>
                            </DataGrid.RowStyle>
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Comment" Binding="{Binding Plan_Comment}"/>
                                <DataGridTextColumn Header="Cikk" Binding="{Binding Plan_ItemFG}"/>
                                <DataGridTextColumn Header="Mennyiség" >
                                    <DataGridTextColumn.Binding>
                                        <Binding Path="Plan_PlannedQty" StringFormat="{}{0:F3}" UpdateSourceTrigger="PropertyChanged"/>
                                    </DataGridTextColumn.Binding>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Eladási ár" >
                                    <DataGridTextColumn.Binding>
                                        <Binding Path="Plan_PriceOfPlanned" StringFormat="{}{0:F2}" UpdateSourceTrigger="PropertyChanged"/>
                                    </DataGridTextColumn.Binding>
                                </DataGridTextColumn>
                            </DataGrid.Columns>

                        </DataGrid>
                    </Grid>
                    <Grid Grid.Row="0" Grid.Column="1">
                        <Border Grid.Row="0" BorderBrush="#4DA1A9" BorderThickness="1" CornerRadius="5" Padding="2" Margin="4">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="25"/>
                                    <RowDefinition Height="25"/>
                                    <RowDefinition Height="25"/>
                                    <RowDefinition Height="25"/>
                                    <RowDefinition Height="25"/>
                                    <RowDefinition Height="25"/>
                                    <RowDefinition Height="25"/>
                                    <RowDefinition Height="25"/>
                                    <RowDefinition Height="25"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding SamplePrice}" VerticalAlignment="Center" FontSize="20" FontFamily="Consolas"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding PlanPrice}" VerticalAlignment="Center" FontSize="20" FontFamily="Consolas"/>
                                <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding PlanDcPrice}" VerticalAlignment="Center" FontSize="20" FontFamily="Consolas"/>
                                <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding MaterialCost}" VerticalAlignment="Center" FontSize="20" FontFamily="Consolas"/>
                                <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding RepackaterialCost}" VerticalAlignment="Center" FontSize="20" FontFamily="Consolas"/>
                                <TextBlock Grid.Row="5" Grid.Column="1" Text="{Binding TtlPlan}" VerticalAlignment="Center" FontSize="20" FontWeight="Bold" FontFamily="Consolas"/>
                                <TextBlock Grid.Row="6" Grid.Column="1" Text="{Binding SalesPlan}" VerticalAlignment="Center" FontSize="20" FontWeight="Bold" FontFamily="Consolas"/>
                                <TextBlock Grid.Row="7" Grid.Column="1" Text="{Binding SalesPlanDc}" VerticalAlignment="Center" FontSize="20" FontWeight="Bold" FontFamily="Consolas"/>
                                <TextBlock Grid.Row="8" Grid.Column="1" Text="{Binding DcMovement}" VerticalAlignment="Center" FontSize="20" FontWeight="Bold" FontFamily="Consolas"/>


                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Minta" VerticalAlignment="Center" FontSize="20" FontFamily="Consolas"/>
                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Kimeneti terv" VerticalAlignment="Center" FontSize="20" FontFamily="Consolas"/>
                                <TextBlock Grid.Row="2" Grid.Column="0" Text="Kimeneti terv DC" VerticalAlignment="Center" FontSize="20" FontFamily="Consolas"/>
                                <TextBlock Grid.Row="3" Grid.Column="0" Text="Anyagköltség" VerticalAlignment="Center" FontSize="20" FontFamily="Consolas"/>
                                <TextBlock Grid.Row="4" Grid.Column="0" Text="Ács. Anyagköltség" VerticalAlignment="Center" FontSize="20" FontFamily="Consolas"/>
                                <TextBlock Grid.Row="5" Grid.Column="0" Text="TTL Kimenet" VerticalAlignment="Center" FontWeight="Bold" FontSize="20" FontFamily="Consolas"/>
                                <TextBlock Grid.Row="6" Grid.Column="0" Text="Sales terv" VerticalAlignment="Center" FontWeight="Bold" FontSize="20" FontFamily="Consolas"/>
                                <TextBlock Grid.Row="7" Grid.Column="0" Text="Sales terv DC" VerticalAlignment="Center" FontWeight="Bold" FontSize="20" FontFamily="Consolas"/>
                                <TextBlock Grid.Row="8" Grid.Column="0" Text="DC movement" VerticalAlignment="Center" FontWeight="Bold" FontSize="20" FontFamily="Consolas"/>
                            </Grid>
                        </Border>
                    </Grid>

                    <Grid Grid.Row="1" Grid.ColumnSpan="2" Grid.RowSpan="2">
                        <GroupBox Header="Kiszállítási terv">
                            <DataGrid ItemsSource="{Binding ShipoutPlan}" AutoGenerateColumns="False" IsReadOnly="True">
                                <DataGrid.ColumnHeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="FontFamily" Value="Consolas"/>
                                        <Setter Property="FontSize" Value="13"/>
                                        <Setter Property="FontWeight" Value="Bold"/>
                                    </Style>
                                </DataGrid.ColumnHeaderStyle>
                                <DataGrid.RowStyle>
                                    <Style TargetType="DataGridRow">
                                        <Setter Property="FontFamily" Value="Consolas"/>
                                        <Setter Property="Foreground" Value="#38757a"/>
                                        <Setter Property="Background" Value="#eef6f7"/>
                                        <Setter Property="FontSize" Value="12"/>
                                    </Style>
                                </DataGrid.RowStyle>
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="BC rendelés" Binding="{Binding Bizonylatszam}"/>
                                    <DataGridTextColumn Header="Cikkszám" Binding="{Binding Szam}"/>
                                    <DataGridTextColumn Header="Nyitott mennyiség" Binding="{Binding NyitottMennyiseg}"/>
                                    <DataGridTextColumn Header="Nyitott összeg" Binding="{Binding NyitottOsszeg}"/>
                                    <DataGridTextColumn Header="Rendelés dátuma" Binding="{Binding OrderDate, StringFormat=\{0:yyyy-MM-dd\}}"/>
                                    <DataGridTextColumn Header="Kért dátum" Binding="{Binding EredetiKertDatum, StringFormat=\{0:yyyy-MM-dd\}}"/>
                                    <DataGridTextColumn Header="Kiszállítási dátum" Binding="{Binding KiszallitasiDatum, StringFormat=\{0:yyyy-MM-dd\}}"/>
                                    <DataGridTextColumn Header="Vevő" Binding="{Binding CustomerName}"/>
                                    <DataGridTextColumn Header="SAP PO" Binding="{Binding SapPoNum}"/>
                                    <DataGridTextColumn Header="SAP SO" Binding="{Binding SapSoNum}"/>


                                </DataGrid.Columns>
                            </DataGrid>
                        </GroupBox>
                    </Grid>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>
