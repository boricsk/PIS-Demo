<Window x:Class="ProdInfoSys.Windows.DeleteWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProdInfoSys.Windows"
        xmlns:ViewModels="clr-namespace:ProdInfoSys.ViewModels"
        mc:Ignorable="d"
        Title="Dokumentum törlése" Height="260" Width="350" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
 <!--   <Window.DataContext>
        <ViewModels:DeleteWindowViewModel/>
    </Window.DataContext> -->
    <Grid>
        <Border Grid.Column="0" BorderBrush="#4DA1A9" BorderThickness="1" CornerRadius="5" Padding="2" Margin="4">
            <StackPanel>
                <Image Source="/img/icons8-danger-100.png" Height="100" Width="100"/>
                <TextBlock Text="Válaszd ki a törölni kívánt dokumentumot" Margin="5"/>
                <ComboBox Margin="5" ItemsSource="{Binding Documents}" SelectedItem="{Binding SelectedDocuments}"/>
                <Button Width="150" Height="30" Margin="5" Content="Törlés" Command="{Binding DeleteDocument}"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
