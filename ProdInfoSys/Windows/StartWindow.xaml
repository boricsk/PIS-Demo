<Window x:Class="ProdInfoSys.Windows.StartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:notification="clr-namespace:RbCreation.Wpf.ProgressNotifier;assembly=RbCreation.Wpf.ProgressNotifier"
        xmlns:local="clr-namespace:ProdInfoSys.Windows"
        mc:Ignorable="d"
        Title="StartWindow" Height="89" Width="370" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" WindowStyle="None" BorderBrush="LightBlue" BorderThickness="3">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <!--
        <Image Name="dialogImage" Grid.Column="0" Height="64" Width="64" Source="/img/icons8-loading-80.png" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0 0 0 0" ></Image>
        -->
        <notification:ProgressNotifier x:Name="progress" 
                       Foreground="#4DA1A9"
                       SpinnerHeight="50"
                       SpinnerWidth="50"                                       
                       IsBusy="True"
                       VerticalAlignment="Center"                                      
                       Margin="0 15 0 0"
                       Grid.Column="0"
                       >
        </notification:ProgressNotifier>

        <Grid Grid.Column="1">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Name="dialogMessage1" Text="Please be patient, your data is being prepared..." Margin="10 5 10 0" TextWrapping="Wrap" VerticalAlignment="Center" HorizontalAlignment="Center"></TextBlock>
                <TextBlock Name="dialogMessage2" Text="Production Information System © 2025" Margin="10 5 10 0" HorizontalAlignment="Center" FontSize="10" ></TextBlock>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
