<Window x:Class="ProdInfoSys.Windows.MeetingMemoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProdInfoSys.Windows"
        xmlns:ViewModels="clr-namespace:ProdInfoSys.ViewModels"
        mc:Ignorable="d"
        Title="MeetingMemoWindow" Height="600" Width="1200" WindowStartupLocation="CenterScreen">
 <!--   <Window.DataContext>
        <ViewModels:MeetingMemoViewModel/>
    </Window.DataContext> -->
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <ToolBar Grid.Row="0">
                <Button Margin="0" Height="30" ToolTip="Mentés" Command="{Binding SaveDocument}" >
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/img/icons8-save-25.png" />
                    </StackPanel>
                </Button>
                <Button Margin="0" Height="30" ToolTip="Kijelölt törlése" Command="{Binding DeleteSelectedMemo}" >
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/img/icons8-delete-25.png" />
                    </StackPanel>
                </Button>
                <Separator/>
                <WrapPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Label Content="Keresés"/>
                    <TextBox Width="160" Height="20" Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"></TextBox>
                </WrapPanel>
            </ToolBar>
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>             

                <Border Grid.Row="0" Margin="5 5 5 5" BorderBrush="#4DA1A9" BorderThickness="1" CornerRadius="5">                    
                    <DataGrid ItemsSource="{Binding MeetingMinutes, Mode=TwoWay}" Grid.Row="1" AutoGenerateColumns="False" SelectedItem="{Binding SelectedItem}">
                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="FontFamily" Value="Consolas"/>
                                <Setter Property="FontSize" Value="13"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                            </Style>
                        </DataGrid.ColumnHeaderStyle>
                        <DataGrid.RowStyle>
                            <Style TargetType="DataGridRow">
                                <Setter Property="FontFamily" Value="Consolas"/>
                                <Setter Property="Foreground" Value="#38757a"/>
                                <Setter Property="Background" Value="#eef6f7"/>
                                <Setter Property="FontSize" Value="12"/>
                            </Style>
                        </DataGrid.RowStyle>
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Létrehozás dátuma" Binding="{Binding date, Mode=TwoWay, StringFormat=\{0:yyyy-MM-dd\}}"></DataGridTextColumn>
                            <DataGridTextColumn Header="Felelős" Binding="{Binding pic, Mode=TwoWay}"></DataGridTextColumn>
                            <DataGridTextColumn Header="Határidő" Binding="{Binding deadline,Mode=TwoWay, StringFormat=\{0:yyyy-MM-dd\}}"></DataGridTextColumn>
                            
                            <DataGridTextColumn Header="Állapot" Binding="{Binding status}" IsReadOnly="True"></DataGridTextColumn>
                            <!--
                            <DataGridComboBoxColumn Header="Állapot"                                                    
                                                    SelectedItemBinding="{Binding status, Mode=TwoWay}"
                                                    ItemsSource="{Binding DataContext.StatusList, 
                                                    RelativeSource={RelativeSource AncestorType=Window}}"/>-->
                        </DataGrid.Columns>
                    </DataGrid>
                </Border>
                <StackPanel Grid.Row="1">
                    <GroupBox Header="Állapot" Grid.Row="2" Grid.Column="0" BorderBrush="#4DA1A9" BorderThickness="1" Padding="2" Margin="4">
                        <ComboBox Width="200" ItemsSource="{Binding StatusList}" SelectedItem="{Binding SelectedItem.status, Mode=TwoWay}" Grid.Column="1" Margin="2 2 2 2" FontFamily="Consolas" FontSize="13"/>
                    </GroupBox>                
                <Border Grid.Row="1" Margin="5 5 5 5" BorderBrush="#4DA1A9" BorderThickness="1" CornerRadius="5">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>                        
                        <GroupBox Header="Feladat" Grid.Column="0" BorderBrush="#4DA1A9" BorderThickness="1" Padding="2" Margin="4">
                            <TextBox Height="150" AcceptsReturn="True" TextWrapping="Wrap" Text="{Binding SelectedItem.task, Mode=TwoWay}"  Grid.Column="1" Margin="2 2 2 2" FontFamily="Consolas" FontSize="13"/>
                        </GroupBox>
                        <GroupBox Header="Megjegyzés" Grid.Column="1" BorderBrush="#4DA1A9" BorderThickness="1" Padding="2" Margin="4">
                            <TextBox AcceptsReturn="True" TextWrapping="Wrap" Text="{Binding SelectedItem.comment, Mode=TwoWay}"  Grid.Column="1" Margin="2 2 2 2" FontFamily="Consolas" FontSize="13"/>
                        </GroupBox>
                    </Grid>
                </Border>
                </StackPanel>
            </Grid>
        </Grid>
        <GroupBox Header="Új memo" Grid.Column="1" BorderBrush="#4DA1A9" BorderThickness="1" Padding="2" Margin="4">

            <Grid Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="60"/>
                    <RowDefinition Height="200"/>
                    <RowDefinition Height="60"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <GroupBox Header="Felelős" Grid.Row="0" Grid.Column="0" BorderBrush="#4DA1A9" BorderThickness="1" Padding="2" Margin="4">
                    <TextBox VerticalContentAlignment="Center" AcceptsReturn="True" TextWrapping="Wrap" Text="{Binding NewMemo.pic, Mode=TwoWay}"  Grid.Column="1" Margin="2 2 2 2" FontFamily="Consolas" FontSize="13"/>
                </GroupBox>
                <GroupBox Header="Határidő" Grid.Row="0" Grid.Column="1" BorderBrush="#4DA1A9" BorderThickness="1" Padding="2" Margin="4">
                    <DatePicker SelectedDate="{Binding NewMemo.deadline, Mode=TwoWay}"/>
                </GroupBox>
                <GroupBox Header="Feladat" Grid.Row="1" Grid.Column="0" BorderBrush="#4DA1A9" BorderThickness="1" Padding="2" Margin="4">
                    <TextBox AcceptsReturn="True" TextWrapping="Wrap" Text="{Binding NewMemo.task, Mode=TwoWay}"  Grid.Column="1" Margin="2 2 2 2" FontFamily="Consolas" FontSize="13"/>
                </GroupBox>
                <GroupBox Header="Megjegyzés" Grid.Row="1" Grid.Column="1" BorderBrush="#4DA1A9" BorderThickness="1" Padding="2" Margin="4">
                    <TextBox AcceptsReturn="True" TextWrapping="Wrap" Text="{Binding NewMemo.comment, Mode=TwoWay}"  Grid.Column="1" Margin="2 2 2 2" FontFamily="Consolas" FontSize="13"/>
                </GroupBox>
                <GroupBox Header="Állapot" Grid.Row="2" Grid.Column="0" BorderBrush="#4DA1A9" BorderThickness="1" Padding="2" Margin="4">
                    <ComboBox ItemsSource="{Binding StatusList}" SelectedItem="{Binding NewMemo.status, Mode=TwoWay}" Grid.Column="1" Margin="2 2 2 2" FontFamily="Consolas" FontSize="13"/>
                </GroupBox>
                <Button Grid.Column="0" Grid.Row="3" Content="Memo hozzáadása" Command="{Binding AddNewMemo}"></Button>
                <Button Grid.Column="1" Grid.Row="2" Content="Nem történt esemény" Command="{Binding AddNoEvent}" Margin="15"></Button>
            </Grid>
        </GroupBox>
    </Grid>
</Window>
