<Window x:Class="ProdInfoSys.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProdInfoSys"
        xmlns:ViewModels="clr-namespace:ProdInfoSys.ViewModels"
        
        xmlns:NestedViewModels="clr-namespace:ProdInfoSys.ViewModels.Nested"
        xmlns:Windows="clr-namespace:ProdInfoSys.Windows.Nested"
        
        mc:Ignorable="d"
        Title="Production Information System" Height="800" Width="1200" WindowStartupLocation="CenterScreen">
    <!--
    <Window.DataContext>
        <ViewModels:MainWindowViewModel/>
    </Window.DataContext>  -->
     <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="22"/>
        </Grid.RowDefinitions>
        <Border Grid.Row="0" BorderBrush="#4DA1A9" BorderThickness="1" CornerRadius="5" Padding="2" Margin="4">
            <ToolBar Grid.Row="0">
                <Image Grid.Row="0" Source="/img/logo_small.png" Margin="5 5 5 5" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                <TextBlock Grid.Row="0" Text="Production Information System" VerticalAlignment="Center" HorizontalAlignment="Center" FontFamily="Cascadia Code" FontSize="14" Margin="0 0 5 0 "/>
                <Button Margin="0" Height="64" ToolTip="Beállítások" Command="{Binding ShowSetupWindow}">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/img/icons8-setup-64.png" />
                    </StackPanel>
                </Button>
                <Separator/>
                <Button Margin="0" Height="64" ToolTip="Új Followup dokumentum" Command="{Binding ShowNewDocument}">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/img/icons8-new-file-64.png" />
                    </StackPanel>
                </Button>
                <Button Margin="0" Height="64" ToolTip="Meeting memo" Command="{Binding ShowMeetingMemoWindow}">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/img/icons8-meeting-room-64.png" />
                    </StackPanel>
                </Button>
                <Button Margin="0" Height="64" ToolTip="Meeting memo küldés" Command="{Binding SendMemo}">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/img/icons8-at-sign-60.png" />
                    </StackPanel>
                </Button>
                <Separator/>
                <Button Margin="0" Height="64" ToolTip="Új Állapotjelentés (Termelési meeting)" Command="{Binding ShowStatusReport}">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/img/icons8-graph-report-64.png" />
                    </StackPanel>
                </Button>
                <Button Margin="0" Height="64" ToolTip="Új Állapotjelentés (QRQC meeting)" Command="{Binding ShowQRQCStatusReport}">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/img/icons8-graph-report-qrqc-64.png" />
                    </StackPanel>
                </Button>
                <Separator/>
                <Button Margin="0" Height="64" ToolTip="Dokumentum törlése" Command="{Binding DeleteDocument}">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/img/icons8-delete-64.png" />
                    </StackPanel>
                </Button>
                <!--
                <Separator/>
                <Button Margin="0" Height="64" ToolTip="Vetítés indítás" Command="{Binding StartProjection}">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/img/icons8-projector-64.png" />
                    </StackPanel>
                </Button>
                <Separator/>
                -->
            </ToolBar>
        </Border>
        <!-- Search-->
        <Border Grid.Row="1" BorderBrush="#4DA1A9" BorderThickness="1" CornerRadius="5" Padding="2" Margin="4">
            <Grid Grid.Row="1" Grid.ColumnSpan="3" Margin="100,5,0,5">
                <StackPanel Orientation="Horizontal">
                    <Image Source="/img/icons8-search.gif" />
                </StackPanel>
                <TextBox x:Name="TextBoxSearch" Margin="100,12,150,12"  VerticalContentAlignment="Center" Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}">
                    <TextBox.Template>
                        <ControlTemplate TargetType="TextBox">
                            <Border BorderBrush="#4DA1A9" 
                                BorderThickness="1" 
                                CornerRadius="10">
                                <!-- Szövegbevitel támogatásához szükséges elem -->
                                <ScrollViewer x:Name="PART_ContentHost" Margin="5" />
                            </Border>
                        </ControlTemplate>
                    </TextBox.Template>
                </TextBox>
            </Grid>
        </Border>

        <!-- Menu area-->
        <Border Grid.Row="2" BorderBrush="#4DA1A9" BorderThickness="1" CornerRadius="5" Padding="2" Margin="4">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="5"/>
                    <ColumnDefinition Width="5*"/>
                </Grid.ColumnDefinitions>

                <TreeView Grid.Column="0" ItemsSource="{Binding TreeNodes}">
                    <TreeView.ItemTemplate>
                        <HierarchicalDataTemplate ItemsSource="{Binding Children}">
                            <TextBlock Text="{Binding Name}" Focusable="True">
                                <TextBlock.InputBindings>
                                    <MouseBinding Gesture="LeftClick"
                                  Command="{Binding DataContext.SelectMenuCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                  CommandParameter="{Binding}" />
                                </TextBlock.InputBindings>
                            </TextBlock>
                        </HierarchicalDataTemplate>
                    </TreeView.ItemTemplate>
                </TreeView>

                <GridSplitter Grid.Column="1" Width="3" HorizontalAlignment="Stretch" Background="#4DA1A9"/>
                <!-- Nested pages-->
                <ContentControl Grid.Column="2" Content="{Binding SelectedContent}">
                    <ContentControl.Resources>
                        <DataTemplate DataType="{x:Type NestedViewModels:HeadcountViewModel }">
                            <Windows:HeadcountUserControl />
                        </DataTemplate>
                        <DataTemplate DataType="{x:Type NestedViewModels:InspectionViewModel}">
                            <Windows:InspectionUserControl />
                        </DataTemplate>
                        <DataTemplate DataType="{x:Type NestedViewModels:MachineViewModel}">
                            <Windows:MachineUserControl />
                        </DataTemplate>
                        <DataTemplate DataType="{x:Type NestedViewModels:ManualViewModel}">
                            <Windows:ManualUserControl />
                        </DataTemplate>
                        <DataTemplate DataType="{x:Type NestedViewModels:StatusReportViewModel}">
                            <Windows:StatusReportUserControl />
                        </DataTemplate>
                        <DataTemplate DataType="{x:Type NestedViewModels:StatusReportQrqcViewModel}">
                            <Windows:StatusReportQrqcUserControl />
                        </DataTemplate>
                    </ContentControl.Resources>
                </ContentControl>
                <!-- End of nested pages-->
            </Grid>
        </Border>

        <!-- Statusbar-->
        <StatusBar Grid.Row="3" Background="#4DA1A9" Foreground="#F6F4F0" Grid.ColumnSpan="3"  Height="22"  Grid.RowSpan="2">
            <StatusBar.ItemsPanel>
                <ItemsPanelTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />

                        </Grid.ColumnDefinitions>
                    </Grid>
                </ItemsPanelTemplate>
            </StatusBar.ItemsPanel>
            <StatusBarItem Grid.Column="0">
                <TextBlock Text="{Binding Time}" />
            </StatusBarItem>
            <Separator Grid.Column="1" Background="#F6F4F0"/>
            <StatusBarItem Grid.Column="2">
                <TextBlock  Text="{Binding RootName}" />
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
